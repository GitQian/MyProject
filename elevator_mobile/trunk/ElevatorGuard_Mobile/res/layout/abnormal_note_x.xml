<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_E7E7E7"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_5e5e5e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/abnormal_note_edittext_shape" >

        <EditText
            android:id="@+id/abnormal_note_show_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_ffffff"
            android:gravity="top"
            android:hint="@string/abnormal_note"
            android:padding="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/abnormal_note_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/abnormal_note_submit_shape"
        android:gravity="center"
        android:text="@string/abnormal_note_submit"
        android:textColor="@color/WHITE"
        android:textSize="@dimen/eighteen_sp"
        android:textStyle="bold" />

</LinearLayout>