<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_include"
        layout="@layout/common_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_include" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/personal_info_rl_head"
                android:background="@color/color_E7E7E7" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/logo"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/color_EDEDED" />

            <RelativeLayout
                android:id="@+id/personal_info_username"
                style="@style/personal_info_rl" >

                <TextView
                    style="@style/personal_info_textview"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="@string/username" />

                <TextView
                    android:id="@+id/person_info_username"
                    style="@style/personal_info_textview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="维保工人" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginLeft="10dp"
                android:background="@color/color_EDEDED" />

            <RelativeLayout style="@style/personal_info_rl" >

                <TextView
                    style="@style/personal_info_textview"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="@string/nikname" />

                <TextView
                    android:id="@+id/person_info_nickname"
                    style="@style/personal_info_textview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="wbgr" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="@color/color_EDEDED" />

            <RelativeLayout style="@style/personal_info_rl" >

                <TextView
                    style="@style/personal_info_textview"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="@string/gender" />

                <TextView
                    android:id="@+id/person_info_sex"
                    style="@style/personal_info_textview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="女" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/color_EDEDED" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_dp"
                android:background="@color/color_E7E7E7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/color_EDEDED" />

            <RelativeLayout style="@style/personal_info_rl" >

                <TextView
                    style="@style/personal_info_textview"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="@string/cell_fhone_number" />

                <TextView
                    android:id="@+id/person_info_usermobile"
                    style="@style/personal_info_textview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="13345641645" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="@color/color_EDEDED" />

            <RelativeLayout style="@style/personal_info_rl" >

                <TextView
                    style="@style/personal_info_textview"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="@string/birthday " />

                <TextView
                    android:id="@+id/person_info_userbirthday"
                    style="@style/personal_info_textview"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/fifteen_dp"
                    android:gravity="center_vertical"
                    android:text="1991-6-19" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/color_EDEDED" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_alignParentBottom="true" >

        <Button
           android:id="@+id/persona_info_loginout_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/doout_login"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="@dimen/twenty_sp" />
    </RelativeLayout>

</RelativeLayout>