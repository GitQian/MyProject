<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/state_white_gray_color_slct"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/size8" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:src="@drawable/clock_icon" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/tv555_16"
                android:layout_width="match_parent"
                android:text="2015年9月9日 11:08:17" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size13"
            android:background="@color/div" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/size8" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:src="@drawable/elevatorname_icon" />

            <TextView
                android:id="@+id/tv_elevatorname"
                style="@style/tv555_16"
                android:layout_width="match_parent"
                android:text="日本三菱电梯" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size13"
            android:background="@color/div" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/size8" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size5"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/tv555_16"
                android:layout_width="match_parent"
                android:text="深圳市南山区高新南七道R2-A" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/size13"
            android:background="@color/div" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size10" >

            <TextView
                android:id="@+id/tv_cycle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="半月维保"
                android:textColor="@color/text_lightly_black"
                android:textSize="@dimen/textSize18" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/div" />

            <TextView
                android:id="@+id/tv_maintenancestate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="尚未维保"
                android:textSize="@dimen/textSize18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/div" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/alert_icon"
        android:visibility="gone" />

</RelativeLayout>