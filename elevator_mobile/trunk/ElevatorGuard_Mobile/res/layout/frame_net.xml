<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:joyattr="http://schemas.android.com/apk/res/com.chinacnit.elevatorguard.mobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linePro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <!--
             <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:indeterminateDrawable="@anim/loading_inner" />
        -->

        <com.ztkj.componet.CircleView
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size60"
            joyattr:drawable="@drawable/logo_only"
            joyattr:stokewidth="3" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size5"
            android:text="正在连接..."
            android:textColor="#c2c2c2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/refresh_screen"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvNoMsg"
        style="@style/tv555"
        android:layout_gravity="center"
        android:text="暂无信息"
        android:textSize="@dimen/textSize16"
        android:visibility="invisible" />

</merge>